  <% for user in @users.reject{|u| u.participates == 0} do %>
    <h2>
    <%=h user.name %>
    </h2>
    <p>
      <% case session[:view_type]
	  when "normal_view" %>
	  <%= user.describing_comments_normal_view %>
      <% when "inflated_view" %>
	  <%= user.describing_comments_inflated_view %>
      <%when "counted_view"%>
	  <%= user.describing_comments_counted_view %>
      <%when "truncted_view"%>
	  <%= user.describing_comments_truncted_view %>
      <% end %>
    </p>
    <p> (מספר מגיבים כולל: <%= user.number_of_commenting_users %>)</p>
    <br>
  <% end %>
