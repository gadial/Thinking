  <% for user in @users.find_all{|u| u.shown and u.enabled} do %>
    <h2>
      <img src="<%=h user.avatar_link%>" alt="" class="avatar" />
      <%=h user.name %>
    </h2>
    <p>
      <% case session[:view_type]
	  when "normal_view" %>
	  <%=h user.describing_comments_normal_view(session[:min_time]) %>
      <% when "inflated_view" %>
	  <%=h user.describing_comments_inflated_view(session[:min_time]) %>
      <%when "counted_view"%>
	  <%=h user.describing_comments_counted_view(session[:min_time]) %>
      <%when "truncted_view"%>
	  <%=h user.describing_comments_truncted_view(session[:min_time]) %>
      <%else%>
	  <%=h user.describing_comments_normal_view(session[:min_time]) %>
      <% end %>
    </p>
    <p> (מספר מגיבים כולל: <%= user.number_of_commenting_users %>)</p>
    <br>
  <% end %>
