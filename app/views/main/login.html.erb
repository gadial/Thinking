<h1>התחברות</h1>
<% form_tag :action => :login do %>
  <table>
    <tr>
      <td>שם משתמש:</td>
      <td> <%=  text_field_tag "name", params[:name]%> </td>
    </tr>
    <tr>
      <td>ססמא:</td>
      <td> <%=  password_field_tag "password", params[:password]%> </td>
    </tr>
  </table>
  <%= submit_tag "login" %>
<% end %>
