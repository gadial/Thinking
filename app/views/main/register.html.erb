<h1>הרשמה</h1>

<% form_for @user, :url => {:controller => :main, :action => :add_user} do |f| %>
	<%= f.error_messages  :header_message => "רישום המשתמש נכשל", :message => "הבעיות הבאות מנעו את רישום המשתמש:" %>

  <p>
    <%= f.label "שם משתמש" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label "ססמא" %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label "הקלידו את הססמא שנית" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit "אשר" %>
  </p>
<% end %>

<%= link_to 'חזרה', users_path %>
