<h1>Listing users</h1>

<table>
  <tr>
    <th>name</th>
    <th>Password</th>
    <th>Participates</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.name %></td>
    <td><%=h user.password_hash %></td>
    <td><%=h user.participates %></td>
    <td><%= link_to 'Show', user %></td>
	<td><%= link_to 'Display comments', :controller => "users", :action => "display_comments", :id => user.id %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

